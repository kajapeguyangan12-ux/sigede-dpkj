rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAnonymous() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }

    function isAdmin() {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Public content - readable by everyone (including unauthenticated)
    match /e-news_berita/{document} {
      allow read: if true;
      allow create, update, delete: if true; // Temporarily allow all for debugging
    }

    match /e-news_pengumuman/{document} {
      allow read: if true;
      allow create, update, delete: if true; // Temporarily allow all for debugging
    }

    // Profil Desa content - public read, admin write
    match /profil-desa/{document} {
      allow read: if true;
      allow create, update, delete: if true; // Temporarily allow all for debugging
    }

    // Wilayah content - public read, admin write
    match /wilayah/{document} {
      allow read: if true;
      allow create, update, delete: if true; // Temporarily allow all for debugging
    }

    // Sejarah content - public read, admin write
    match /sejarah/{document} {
      allow read: if true;
      allow create, update, delete: if true; // Temporarily allow all for debugging
    }

    // Visi & Misi content - public read, admin write
    match /visi-misi/{document} {
      allow read: if true;
      allow create, update, delete: if true; // Temporarily allow all for debugging
    }

    // Admin profiles - allow access for authenticated and anonymous users
    match /admins/{uid} {
      allow read: if true; // Allow public read for user validation
      allow write: if true; // Temporarily allow all for debugging
    }

    // Users collection - for RBAC system (allow all access for login validation)
    match /users/{document} {
      allow read, write: if true; // Allow all access for user management and login
    }
    
    // Masyarakat collection - untuk pendaftaan dan validasi user
    match /masyarakat/{document} {
      allow read, write: if true; // Allow all access for user registration and validation
    }
    
    // User profiles collection
    match /user-profiles/{userId} {
      allow read, write: if true; // Allow all access for user profiles
    }
    
    // User sessions - untuk tracking login dan session management
    match /user-sessions/{sessionId} {
      allow read, write: if true; // Allow public access for session management
    }
    
    // Admin logs - allow all for debugging
    match /admin-logs/{logId} {
      allow read, write: if true; // Temporarily allow all for debugging
    }
    
    // Role requests - untuk request perubahan role  
    match /role-requests/{requestId} {
      allow read, write: if true; // Temporarily allow all for debugging
    }

    // Keuangan - allow all for debugging
    match /keuangan/{document} {
      allow read, write: if true;
    }
    
    // Layanan Publik - allow all for debugging 
    match /layanan-publik/{document} {
      allow read, write: if true;
    }
    
    // Regulasi - allow all for debugging
    match /regulasi/{document} {
      allow read, write: if true;
    }
    
    // IKM (Indeks Kepuasan Masyarakat) - allow all for debugging
    match /ikm/{document} {
      allow read, write: if true;
    }
    
    // Wisata & Budaya - allow all for debugging
    match /wisata-budaya/{document} {
      allow read, write: if true;
    }
    
    // Pengaduan - allow all for debugging
    match /pengaduan/{document} {
      allow read, write: if true;
    }
    
    // E-UMKM - allow all for debugging
    match /e-umkm/{document} {
      allow read, write: if true;
    }
    
    // Data Desa - allow all for debugging
    match /data-desa/{document} {
      allow read, write: if true;
    }

    // Default fallback - allow all access for debugging
    match /{document=**} {
      allow read, write: if true; // Temporarily allow all access for debugging
    }
  }
}
